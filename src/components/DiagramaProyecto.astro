---
// Componente de diagrama visual del proyecto
---

<div class="diagrama-container">
  <svg viewBox="0 0 1000 600" class="diagrama-proyecto" aria-label="Diagrama del sistema de energías renovables para incubación avícola">
    <!-- Fondo -->
    <defs>
      <marker id="arrowhead" markerWidth="10" markerHeight="7" refX="9" refY="3.5" orient="auto">
        <polygon points="0 0, 10 3.5, 0 7" fill="#2c6f4f" />
      </marker>
      <linearGradient id="gradient-solar" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="#f1c40f" />
        <stop offset="100%" stop-color="#e67e22" />
      </linearGradient>
      <linearGradient id="gradient-biogas" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="#27ae60" />
        <stop offset="100%" stop-color="#16a085" />
      </linearGradient>
      <filter id="drop-shadow" x="-20%" y="-20%" width="140%" height="140%">
        <feGaussianBlur in="SourceAlpha" stdDeviation="4" result="blur" />
        <feOffset in="blur" dx="2" dy="4" result="offsetBlur" />
        <feComponentTransfer in="offsetBlur" result="shadow">
          <feFuncA type="linear" slope="0.2" />
        </feComponentTransfer>
        <feMerge> 
          <feMergeNode in="shadow" />
          <feMergeNode in="SourceGraphic" />
        </feMerge>
      </filter>
    </defs>

    <!-- Título -->
    <text x="500" y="40" text-anchor="middle" font-size="24" font-weight="bold" fill="#2c3e50">Sistema Integrado de Energías Renovables</text>
    <text x="500" y="70" text-anchor="middle" font-size="16" fill="#7f8c8d">Flujo de energía y procesos en la incubación avícola</text>
    
    <!-- Paneles Solares -->
    <g class="solar-panel" transform="translate(100, 100)">
      <rect x="0" y="0" width="180" height="100" rx="8" fill="url(#gradient-solar)" filter="url(#drop-shadow)" />
      <line x1="10" y1="20" x2="170" y2="20" stroke="white" stroke-width="2" stroke-opacity="0.3" />
      <line x1="10" y1="40" x2="170" y2="40" stroke="white" stroke-width="2" stroke-opacity="0.3" />
      <line x1="10" y1="60" x2="170" y2="60" stroke="white" stroke-width="2" stroke-opacity="0.3" />
      <line x1="10" y1="80" x2="170" y2="80" stroke="white" stroke-width="2" stroke-opacity="0.3" />
      <text x="90" y="130" text-anchor="middle" font-size="14" font-weight="bold">Paneles Solares</text>
      <text x="90" y="150" text-anchor="middle" font-size="12">Generación de energía limpia</text>
      <text x="90" y="170" text-anchor="middle" font-size="12">y calor sostenible</text>
    </g>
    
    <!-- Biodigestor -->
    <g class="biodigestor" transform="translate(100, 300)">
      <ellipse cx="90" cy="40" rx="80" ry="40" fill="url(#gradient-biogas)" filter="url(#drop-shadow)" />
      <rect x="30" y="40" width="120" height="60" fill="url(#gradient-biogas)" filter="url(#drop-shadow)" />
      <rect x="40" y="100" width="100" height="20" fill="#8b4513" rx="4" />
      <text x="90" y="160" text-anchor="middle" font-size="14" font-weight="bold">Biodigestor</text>
      <text x="90" y="180" text-anchor="middle" font-size="12">Transformación de residuos</text>
      <text x="90" y="200" text-anchor="middle" font-size="12">en biogás y fertilizante</text>
    </g>
    
    <!-- Caldera -->
    <g class="caldera" transform="translate(400, 200)">
      <rect x="0" y="0" width="200" height="200" rx="100" fill="#e74c3c" filter="url(#drop-shadow)" />
      <rect x="20" y="20" width="160" height="160" rx="80" fill="#c0392b" />
      <rect x="40" y="40" width="120" height="120" rx="60" fill="#e74c3c" />
      <text x="100" y="120" text-anchor="middle" font-size="14" font-weight="bold" fill="white">Caldera</text>
      <text x="100" y="140" text-anchor="middle" font-size="12" fill="white">Generación de vapor</text>
      <text x="100" y="160" text-anchor="middle" font-size="12" fill="white">y calor controlado</text>
    </g>
    
    <!-- Incubadora -->
    <g class="incubadora" transform="translate(700, 150)">
      <rect x="0" y="0" width="250" height="300" rx="15" fill="#3498db" filter="url(#drop-shadow)" />
      <rect x="20" y="20" width="210" height="260" rx="10" fill="#2980b9" />
      <circle cx="125" cy="150" r="80" fill="#2c3e50" />
      <text x="125" y="140" text-anchor="middle" font-size="14" font-weight="bold" fill="white">INCUBADORA</text>
      <text x="125" y="160" text-anchor="middle" font-size="12" fill="white">Temperatura y humedad</text>
      <text x="125" y="180" text-anchor="middle" font-size="12" fill="white">controladas</text>
      
      <!-- Huevos -->
      <circle cx="80" cy="120" r="15" fill="#f5f5f5" />
      <circle cx="120" cy="120" r="15" fill="#f5f5f5" />
      <circle cx="160" cy="120" r="15" fill="#f5f5f5" />
      <circle cx="100" cy="150" r="15" fill="#f5f5f5" />
      <circle cx="140" cy="150" r="15" fill="#f5f5f5" />
      <circle cx="80" cy="180" r="15" fill="#f5f5f5" />
      <circle cx="120" cy="180" r="15" fill="#f5f5f5" />
      <circle cx="160" cy="180" r="15" fill="#f5f5f5" />
    </g>
    
    <!-- Flechas de conexión -->
    <path d="M280,150 C330,150 350,180 400,180" fill="none" stroke="#2c6f4f" stroke-width="3" stroke-dasharray="8,4" marker-end="url(#arrowhead)" />
    <path d="M280,350 C330,350 350,280 400,250" fill="none" stroke="#2c6f4f" stroke-width="3" stroke-dasharray="8,4" marker-end="url(#arrowhead)" />
    <path d="M600,250 C650,250 670,250 700,250" fill="none" stroke="#2c6f4f" stroke-width="3" stroke-dasharray="8,4" marker-end="url(#arrowhead)" />
    
    <!-- Etiquetas de flujo -->
    <g class="energy-flows">
      <rect x="340" y="130" width="120" height="30" rx="15" fill="#f8f9fa" stroke="#2c6f4f" stroke-width="2" />
      <text x="400" y="150" text-anchor="middle" font-size="12">Energía Térmica</text>
      
      <rect x="340" y="300" width="120" height="30" rx="15" fill="#f8f9fa" stroke="#2c6f4f" stroke-width="2" />
      <text x="400" y="320" text-anchor="middle" font-size="12">Biogás</text>
      
      <rect x="500" y="220" width="100" height="30" rx="15" fill="#f8f9fa" stroke="#2c6f4f" stroke-width="2" />
      <text x="550" y="240" text-anchor="middle" font-size="12">Vapor</text>
    </g>
    
    <!-- Indicadores de eficiencia -->
    <g class="efficiency">
      <circle cx="500" cy="400" r="50" fill="#2c6f4f" fill-opacity="0.1" stroke="#2c6f4f" stroke-width="2" stroke-dasharray="5,3" />
      <text x="500" y="390" text-anchor="middle" font-size="14" font-weight="bold" fill="#2c6f4f">+60%</text>
      <text x="500" y="410" text-anchor="middle" font-size="12" fill="#2c6f4f">Eficiencia</text>
      <text x="500" y="430" text-anchor="middle" font-size="12" fill="#2c6f4f">Energética</text>
      
      <circle cx="750" cy="400" r="50" fill="#3498db" fill-opacity="0.1" stroke="#3498db" stroke-width="2" stroke-dasharray="5,3" />
      <text x="750" y="390" text-anchor="middle" font-size="14" font-weight="bold" fill="#3498db">-70%</text>
      <text x="750" y="410" text-anchor="middle" font-size="12" fill="#3498db">Emisiones</text>
      <text x="750" y="430" text-anchor="middle" font-size="12" fill="#3498db">CO₂</text>
      
      <circle cx="250" cy="400" r="50" fill="#e67e22" fill-opacity="0.1" stroke="#e67e22" stroke-width="2" stroke-dasharray="5,3" />
      <text x="250" y="390" text-anchor="middle" font-size="14" font-weight="bold" fill="#e67e22">-50%</text>
      <text x="250" y="410" text-anchor="middle" font-size="12" fill="#e67e22">Costos</text>
      <text x="250" y="430" text-anchor="middle" font-size="12" fill="#e67e22">Operativos</text>
    </g>
  </svg>
</div>

<style>
  .diagrama-container {
    width: 100%;
    max-width: 1000px;
    margin: 2rem auto;
    overflow: auto;
    background: white;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    padding: 1.5rem;
  }
  
  .diagrama-proyecto {
    width: 100%;
    height: auto;
  }
  
  /* Animaciones */
  .solar-panel {
    animation: float 3s ease-in-out infinite;
  }
  
  .biodigestor {
    animation: float 3.5s ease-in-out infinite;
    animation-delay: 0.3s;
  }
  
  .caldera {
    animation: pulse 4s ease-in-out infinite;
  }
  
  .incubadora {
    animation: float 3.2s ease-in-out infinite;
    animation-delay: 0.2s;
  }
  
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }
  
  @keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
  }
  
  /* Efecto hover */
  .solar-panel, .biodigestor, .caldera, .incubadora, .energy-flows rect, .efficiency circle {
    transition: transform 0.3s ease;
    cursor: help;
  }
  
  .solar-panel:hover, .biodigestor:hover, .caldera:hover, .incubadora:hover {
    transform: scale(1.05);
  }
  
  .energy-flows rect:hover, .efficiency circle:hover {
    transform: scale(1.1);
  }
  
  /* Tooltips */
  [data-tooltip] {
    position: relative;
  }
  
  [data-tooltip]:hover:after {
    content: attr(data-tooltip);
    position: absolute;
    bottom: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: #2c3e50;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    font-size: 0.8rem;
    white-space: nowrap;
    z-index: 100;
  }
  
  /* Responsivo */
  @media (max-width: 768px) {
    .diagrama-container {
      padding: 0.5rem;
      border-radius: 8px;
    }
    
    .diagrama-proyecto {
      transform: scale(0.8);
      transform-origin: top left;
      width: 125%;
      height: auto;
    }
  }
</style>
