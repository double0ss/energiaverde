---
const { title = "Infografía Renovables" } = Astro.props;
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <style>
      :root {
        --verde: #2c6f4f;
        --verde-claro: #e8f8f0;
        --azul: #2c3e50;
        --fondo: #f5f7f6;
        --panel: #3498db;
        --biogas: #27ae60;
        --caldera: #e67e22;
        --sombra: 0 2px 15px rgba(0,0,0,0.1);
        --transicion: all 0.3s ease;
      }
      
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      
      body {
        margin: 0;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, 'Helvetica Neue', 'Noto Sans', 'Liberation Sans', Arial, 'Apple Color Emoji', 'Segoe UI Emoji';
        background: var(--fondo);
        color: var(--azul);
        line-height: 1.6;
        padding-top: 100px; /* Aumentado para dar más espacio al header fijo */
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      
      .main-content {
        flex: 1;
        padding: 2rem 0;
      }
      
      .wrap {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        width: 100%;
      }
      header h1 {
        color: var(--verde);
        font-size: clamp(1.6rem, 2.6vw, 2.2rem);
        margin: 0 0 1rem 0;
      }
      header p { margin: 0 0 1.2rem 0; }
      .grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1.5rem;
      }
      @media (min-width: 900px) {
        .grid {
          grid-template-columns: 1.1fr 0.9fr;
          align-items: start;
        }
      }
      .panel {
        background: white;
        border-radius: 12px;
        padding: 1.2rem;
        box-shadow: 0 4px 14px rgba(0,0,0,.06);
      }
      .beneficios {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px,1fr));
        gap: .8rem;
      }
      .beneficios div {
        background: #e8f8f0;
        border-radius: 10px;
        padding: .8rem 1rem;
        text-align: center;
        font-weight: 600;
        color: var(--verde);
      }
      /* Estilos del encabezado */
      .main-header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
        z-index: 1000;
        padding: 0.5rem 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
      }
      
      .main-header.scrolled {
        background: rgba(255, 255, 255, 0.95);
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        padding: 0.3rem 0;
      }
      
      .main-header .wrap {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.5rem 2rem;
      }
      
      .logo a {
        font-size: 1.4rem;
        font-weight: 700;
        color: var(--verde);
        text-decoration: none;
        display: block;
        line-height: 1.2;
      }
      
      .logo span {
        font-size: 0.9rem;
        color: var(--azul);
        opacity: 0.8;
      }
      
      .main-nav ul {
        display: flex;
        list-style: none;
        gap: 1.5rem;
        margin: 0;
        padding: 0;
      }
      
      .main-nav a {
        color: var(--azul);
        text-decoration: none;
        font-weight: 500;
        padding: 0.5rem 0;
        position: relative;
        transition: var(--transicion);
      }
      
      .main-nav a:after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        background: var(--verde);
        bottom: 0;
        left: 0;
        transition: var(--transicion);
      }
      
      .main-nav a:hover,
      .main-nav a:focus {
        color: var(--verde);
      }
      
      .main-nav a:hover:after,
      .main-nav a:focus:after {
        width: 100%;
      }
      
      /* Estilos del pie de página */
      footer {
        background: #1a252f;
        color: #f8f9fa;
        padding: 4rem 0 0;
        font-size: 0.95rem;
        margin-top: auto;
      }
      
      .footer-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 3rem;
        margin-bottom: 3rem;
      }
      
      .footer-col h4 {
        color: #fff;
        margin-bottom: 1.5rem;
        font-size: 1.2rem;
        position: relative;
        padding-bottom: 0.8rem;
      }
      
      .footer-col h4:after {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        width: 50px;
        height: 2px;
        background: var(--verde);
      }
      
      .footer-col p {
        color: #adb5bd;
        line-height: 1.8;
        margin-bottom: 1.5rem;
      }
      
      .social-links {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
      }
      
      .social-links a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 36px;
        height: 36px;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 50%;
        color: #fff;
        transition: all 0.3s ease;
      }
      
      .social-links a:hover {
        background: var(--verde);
        transform: translateY(-3px);
      }
      
      .footer-links {
        list-style: none;
        padding: 0;
        margin: 0;
      }
      
      .footer-links li {
        margin-bottom: 0.8rem;
      }
      
      .footer-links a {
        color: #adb5bd;
        text-decoration: none;
        transition: all 0.3s ease;
        display: block;
        padding: 0.3rem 0;
      }
      
      .footer-links a:hover {
        color: var(--verde);
        padding-left: 5px;
      }
      
      .contact-info {
        list-style: none;
        padding: 0;
        margin: 0;
      }
      
      .contact-info li {
        display: flex;
        align-items: flex-start;
        margin-bottom: 1.2rem;
        color: #adb5bd;
      }
      
      .contact-info svg {
        margin-right: 1rem;
        color: var(--verde);
        flex-shrink: 0;
        margin-top: 0.2rem;
      }
      
      .contact-info a {
        color: #adb5bd;
        text-decoration: none;
        transition: all 0.3s ease;
      }
      
      .contact-info a:hover {
        color: var(--verde);
      }
      
      .newsletter-form {
        display: flex;
        gap: 0.5rem;
        margin-top: 1.5rem;
      }
      
      .newsletter-form input {
        flex: 1;
        padding: 0.7rem 1rem;
        border: 1px solid rgba(255, 255, 255, 0.1);
        background: rgba(255, 255, 255, 0.05);
        color: #fff;
        border-radius: 4px;
        font-size: 0.95rem;
      }
      
      .newsletter-form input::placeholder {
        color: rgba(255, 255, 255, 0.5);
      }
      
      .newsletter-form button {
        background: var(--verde);
        color: white;
        border: none;
        padding: 0 1.5rem;
        border-radius: 4px;
        cursor: pointer;
        font-weight: 600;
        transition: all 0.3s ease;
      }
      
      .newsletter-form button:hover {
        background: #245c43;
      }
      
      .footer-bottom {
        background: #141e27;
        padding: 1.5rem 0;
        text-align: center;
        font-size: 0.9rem;
        color: #6c757d;
      }
      
      .footer-legal {
        margin-top: 1rem;
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 1rem;
      }
      
      .footer-legal a {
        color: #6c757d;
        text-decoration: none;
        transition: all 0.3s ease;
      }
      
      .footer-legal a:hover {
        color: var(--verde);
      }
      
      .footer-legal span {
        color: #495057;
      }
      
      /* Estilos para el botón de volver arriba */
      #back-to-top {
        position: fixed;
        bottom: 2rem;
        right: 2rem;
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: var(--verde);
        color: white;
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        visibility: hidden;
        transform: translateY(20px);
        transition: all 0.3s ease;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        z-index: 999;
      }
      
      #back-to-top.show {
        opacity: 1;
        visibility: visible;
        transform: translateY(0);
      }
      
      #back-to-top:hover {
        background: #245c43;
        transform: translateY(-3px);
      }
      
      #back-to-top:active {
        transform: translateY(0);
      }
      
      /* Estilos responsivos */
      @media (max-width: 768px) {
        body {
          padding-top: 70px;
        }
        
        .main-header .wrap {
          flex-direction: column;
          padding: 1rem;
        }
        
        .logo {
          margin-bottom: 1rem;
          text-align: center;
        }
        
        .main-nav ul {
          flex-wrap: wrap;
          justify-content: center;
          gap: 1rem;
        }
        
        .wrap {
          padding: 0 1rem;
        }
      }
      
      img { max-width: 100%; height: auto; display: block; }
    </style>
  </head>
